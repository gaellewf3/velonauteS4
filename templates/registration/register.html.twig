{% extends "_template.html.twig" %}

{% block title %}Register{% endblock %}

{% block content %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>
    <section class="section">
        <div class="container is-fullheight-with-menu">
            <div class="columns is-centered">
                <div class="column box is-half-tablet is-full-mobile">
                    <h1 class="title has-text-success has-text-centered">Register</h1>
                    {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.nom)}}
                        {{ form_row(registrationForm.prenom)}}
                        {{ form_row(registrationForm.pseudo)}}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                        {{ form_row(registrationForm.adresse)}}
                        {{ form_row(registrationForm.ville)}}
                        {{ form_row(registrationForm.cp, {
                            label: 'Code Postale'
                        }) }}

                        <button type="submit" class="button is-success is-fullwidth">Register</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

