{% extends "base.html.twig" %}
{% block body %}

    {# Menu qui sera affiché sur toutes les pages du Front-Office #}
    <nav class="navbar is-success">
        <div class="navbar-brand">
            <a class="navbar-item" href="{{ path('home') }}">
                <img src="{{ asset('build/images/logo-officiel.png') }}" alt="logo de site">
                <h1>Velonaute</h1>
            </a>
            

            <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" href="{{ path('destination') }}">
                    Destinations
                </a>

                <a class="navbar-item" href="{{ path('thematiques') }}">
                    Thématiques
                </a>

                <a class="navbar-item" href="{{ path('reservation') }}">
                    Réservation
                </a>
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        <a class="button is-success is-light is-small" href="{{ path('cart_index') }}" title="Panier">
                                <i class="fas fa-shopping-cart"></i>
                            </a>  
                        {% if app.user %}
                            <a class="button is-success is-light is-small" href="#">
                                <strong>{{ app.user.pseudo }}</strong>
                            </a>
                            <a class="button is-light is-danger is-small" href="{{ path('app_logout') }}">
                                Déconnexion
                            </a>
                        {% else %}
                        <a class="button is-success is-light is-small" href="{{ path('app_register')}}">
                            <strong>Inscription</strong>
                        </a>
                        <a class="button is-success is-light is-small" href="{{ path('app_login') }}" title="Connexion">
                            <i class="fas fa-user"></i>
                        </a>
                        {% endif %}

                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="button is-success is-light is-small" href="{{ path('admin_dashboard') }}">
                            <strong>Back Office</strong>
                        </a>
                        {% endif %}
                    </div>
                </div>

                <a class="navbar-item">
                    <form action="#">
                        <div class="field has-addons">
                            <div class="control is-expanded">
                                <input name="query" type="text" class="input is-small" placeholder="Recherche ..." required>
                            </div>
                            <div class="control">
                                <button type="submit" class="button is-success is-light is-small">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </a>
            </div>
        </div>
    </nav>

    {# Bloc qui contiendra le contenu de chaque page #}
    {% block content %}{% endblock %}

    {# Footer qui sera affiché sur chaque page #}
    <footer>
        <section id="infosFooter">
            <div>
                <p><a id="buttoncontact" href="#">Contactez-nous</a></p>
                <p><a href="{{ path('faq') }}">FAQ</a></p>
                <p><a href="{{ path('mentions') }}">Mentions légales</a></p>
            </div>
            <div id="adresse">
                <h3>Adresse</h3>
                <p>8 rue de Rivoli 75004 Paris</p>
                <a class="reseaux" href="https://fr-fr.facebook.com/" target="_blank"><i class="fab fa-facebook-f"></i></a>
                <a class="reseaux" href="https://www.instagram.com/?hl=fr/" target="_blank"><i class="fab fa-instagram"></i></a>
                <a class="reseaux" href="https://twitter.com/?lang=fr" target="_blank"><i class="fab fa-twitter-square"></i></a>
            </div>
        </section>
        <section id="contact">
            <div class="forum">
                <i id="close" class='fas fa-times'></i>
                <h2 class="titre">Contactez-nous</h2>
                <form>
                    <p><input type="text" name="your-name" size="40" placeholder="Votre prénom, nom"></p>
                    <p><input type="email" name="your-mail" size="40" placeholder="Votre e-mail"></p>
                    <p><textarea name="your-message" cols="40" rows="10" placeholder="Votre message"></textarea></p>
                    <p><input type="submit" value="Envoyer"></p>
                </form>
            </div>
        </section>
        <section id="copyright">
            <p>Copyright © 2020 - Tous droits réservés</p>
        </section>
    </footer>

    {% block javascripts %}
        {# {{ encore_entry_script_tags('home') }} #}
    {% endblock %}
{% endblock %}

