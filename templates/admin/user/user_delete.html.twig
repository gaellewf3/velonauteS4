{% extends "admin/dashboard/index.html.twig" %}

{% block title %}
    Suppression de - {{ user.nom }}
{% endblock %}

{% block content %}
    <section class="section">
        <h2 class="title">Suppression du membre {{user.nom}}</h2>

        {{ form_start(confirmation_form) }}

            {{ form_row(confirmation_form.confirmation, {
                label: 'Je confirme la suppression du membre ' ~ user.nom ~ ' et de ses informations .'
            }) }}

            <button type="submit" class="button is-danger is-fullwidth">
                Supprimer
            </button>

        {{ form_end(confirmation_form) }}

    </section>
{% endblock %}